{
  "name": "tiferet-yaakov-calendar",
  "version": "1.0.0",
  "private": false,
  "description": "Daily zmanim for Kokhav Yaakov and Tel Zion",
  "author": {
    "name": "Yehuda Israel",
    "email": "Yehuda_Fievel@yahoo.com"
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "electron-pack": "^1.3.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.3",
    "react-scripts": "5.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "@types/node": "^16.7.13",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "concurrently": "^8.2.2",
    "electron": "^31.4.0",
    "electron-builder": "^24.13.3",
    "serve": "^14.2.3",
    "typescript": "^4.4.2",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "electron-start": "wait-on http://localhost:3000 && yarn electron",
    "electron": "electron electron",
    "start": "concurrently \"BROWSER=none yarn react-start\" \"yarn electron-start\"",
    "build": "react-scripts build",
    "serve": "serve -s build",
    "postbuild": "cp ./electron.js ./build/electron.js && cp ./electron.js ./public/electron.js",
    "postinstall": "electron-builder install-app-deps",
    "package": "BUILD=true DEBUG=electron-builder electron-builder --dir",
    "builder": "BUILD=true electron-builder",
    "release": "yarn build && yarn builder"
  },
  "main": "electron.js",
  "build": {
    "publish": null,
    "appId": "com.example.electron-cra",
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "files": [
      "build/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
